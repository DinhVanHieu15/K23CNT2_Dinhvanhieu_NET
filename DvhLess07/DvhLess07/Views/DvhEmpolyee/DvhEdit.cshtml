@model DvhLess07.Models.DvhEmpolyee
@{
    ViewData["Title"] = "Sửa thông tin nhân viên";
}

<h4>Sửa thông tin nhân viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DvhEdit" asp-route-id="@Model.DvhId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DvhId" class="control-label"></label>
                <input asp-for="DvhId" class="form-control" />
                <span asp-validation-for="DvhId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DvhName" class="control-label"></label>
                <input asp-for="DvhName" class="form-control" />
                <span asp-validation-for="DvhName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DvhBirthDay" class="control-label"></label>
                <input asp-for="DvhBirthDay" class="form-control" />
                <span asp-validation-for="DvhBirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DvhEmail" class="control-label"></label>
                <input asp-for="DvhEmail" class="form-control" />
                <span asp-validation-for="DvhEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DvhPhone" class="control-label"></label>
                <input asp-for="DvhPhone" class="form-control" />
                <span asp-validation-for="DvhPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DvhSalary" class="control-label"></label>
                <input asp-for="DvhSalary" class="form-control" />
                <span asp-validation-for="DvhSalary" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DvhStatus" /> @Html.DisplayNameFor(model => model.DvhStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

