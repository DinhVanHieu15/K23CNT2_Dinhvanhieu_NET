@model DvhLap06.Models.DataModels.DvhEmpolyee

@{
    ViewBag.Title = "Thêm mới nhân viên";
}

<h2>Thêm mới nhân viên</h2>

<div class="container mt-4">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white">
            <h3><i class="bi bi-person-plus"></i> Thêm mới nhân viên</h3>
        </div>
        <div class="card-body">
            <form asp-action="DvhCreate" method="post">
                <div class="mb-3">
                    <label asp-for="DvhName" class="form-label">Tên nhân viên</label>
                    <input asp-for="DvhName" class="form-control" placeholder="Nhập tên nhân viên" />
                    <span asp-validation-for="DvhName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DvhBirthDay" class="form-label">Ngày sinh</label>
                    <input asp-for="DvhBirthDay" type="date" class="form-control" />
                    <span asp-validation-for="DvhBirthDay" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DvhEmail" class="form-label">Email</label>
                    <input asp-for="DvhEmail" type="email" class="form-control" placeholder="example@email.com" />
                    <span asp-validation-for="DvhEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DvhPhone" class="form-label">Điện thoại</label>
                    <input asp-for="DvhPhone" class="form-control" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="DvhPhone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DvhSalary" class="form-label">Lương</label>
                    <input asp-for="DvhSalary" type="number" class="form-control" placeholder="Nhập lương" />
                    <span asp-validation-for="DvhSalary" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="DvhStatus" class="form-check-input" type="checkbox" />
                    <label asp-for="DvhStatus" class="form-check-label">Đang làm việc</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="DvhIndex" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>