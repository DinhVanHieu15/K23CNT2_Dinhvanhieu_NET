@model DvhLap06.Models.DataModels.DvhEmpolyee

@{
    ViewBag.Title = "Xóa nhân viên";
}

<h2>Xóa nhân viên</h2>

<h3>Bạn có chắc muốn xóa nhân viên này không?</h3>
<div>
    <h4>@Model.DvhName</h4>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.DvhId</dd>
        <dt>Email</dt>
        <dd>@Model.DvhEmail</dd>
        <dt>Điện thoại</dt>
        <dd>@Model.DvhPhone</dd>
    </dl>
</div>

@using (Html.BeginForm("DvhDelete", "DvhEmployee", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.DvhId)

    <input type="submit" value="Xóa" class="btn btn-danger" />
    <a href="@Url.Action("Index")" class="btn btn-default">Hủy</a>
}
