                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Ghi Lai" class="btn btn-primary" name="btnDvhCreate" />
                        <a asp-action="DvhIndex">Back to List</a>
                    </div>
                </div>
            </div>


          
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
