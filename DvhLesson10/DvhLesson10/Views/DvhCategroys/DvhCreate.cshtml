@model DvhLesson10.Models.Categroy

@{
    ViewData["Title"] = "Them moi danh muc";
}

<h1> @ViewData["Title"]</h1>

<h4>Categroy</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="DvhCreate">
            <div class="card">
                <div class="card-header">
                    <h1> @ViewData["Title"]</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class=" card-body">
                    <div class="form-group">
