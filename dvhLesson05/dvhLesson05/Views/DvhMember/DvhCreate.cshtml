@model dvhLesson05.Models.DataModels.DvhMember
@{
    ViewData["Title"] = "Dvh Tạo mới Member";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DvhUserName"></label>
        <input asp-for="DvhUserName" class="form-control" />
        <span asp-validation-for="DvhUserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DvhFullName"></label>
        <input asp-for="DvhFullName" class="form-control" />
        <span asp-validation-for="DvhFullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DvhPassWord"></label>
        <input asp-for="DvhPassWord" class="form-control" />
        <span asp-validation-for="DvhPassWord" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DvhEmail"></label>
        <input asp-for="DvhEmail" class="form-control" />
        <span asp-validation-for="DvhEmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
